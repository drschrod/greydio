{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs", // CommonJS for Electron's main process
        "moduleResolution": "node", // Add this to resolve Node modules like Electron
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "jsx": "react"
    },
    "include": [
        "src/**/*"
    ]
}